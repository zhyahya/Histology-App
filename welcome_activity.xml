<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/cardview_dark_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/prototype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Prototype Histology App!"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prototype"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="10dp"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:text="Welcome to the app."
        android:textColor="@color/white"
        android:gravity="center"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/direction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="10dp"
        android:drawablePadding="20dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="Select the body system to continue."
        android:textColor="@color/white"
        android:textColorHint="@color/white" />


    <ImageView
        android:id="@+id/circulatoryimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/direction"
        android:layout_marginTop="-182dp"
        app:srcCompat="@drawable/img" />

    <Button
        android:id="@+id/circulatorytxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/direction"
        android:layout_marginTop="229dp"
        android:layout_marginBottom="10dp"
        android:drawablePadding="20dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="Circulatory System."
        android:textColor="@color/white"
        android:textColorHint="@color/white" />




</RelativeLayout>
